@model ML.Persona
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>REGISTRO DE PERSONAS</h2>
<div class="row">
    <div class="col-12">
        <h5>Ingrese los datos de la persona:</h5>
    </div>
</div>
</hr>

@using (Html.BeginForm("Form", "Persona", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-1" style="display: none;">
            @Html.TextBoxFor(model => model.IdPersona, new { @class = "hidden form-control", autocomplete = "off" })
        </div>

        <div class="col-md-3">
            @Html.LabelFor(model => model.Nombre, "Nombre(s): ")
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="bi bi-controller"></i></span>
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.Nombre, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            @Html.LabelFor(model => model.ApellidoPaterno, "Apellido Paterno:")
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="bi bi-controller"></i></span>
                @Html.TextBoxFor(model => model.ApellidoPaterno, new { @class = "form-control", autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.ApellidoPaterno, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            @Html.LabelFor(model => model.ApellidoMaterno, "Apellido Materno(Opcional): ")
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="bi bi-controller"></i></span>
                @Html.TextBoxFor(model => model.ApellidoMaterno, new { @class = "form-control", autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.ApellidoMaterno, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            @Html.LabelFor(model => model.FechaNacimiento, "Fecha de Nacimiento(YYYY-MM-DD): ")
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="bi bi-controller"></i></span>
                @Html.TextBoxFor(model => model.FechaNacimiento, new { @class = "form-control", autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.FechaNacimiento, null, new { @class = "text-danger" })
            </div>
        </div>

    </div>

    <div class="row">

        <div class="col-md-3">
            @Html.LabelFor(model => model.Sexo, "Sexo(Hombre/Mujer): ")
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="bi bi-controller"></i></span>
                @Html.TextBoxFor(model => model.Sexo, new { @class = "form-control", autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.Sexo, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            @Html.LabelFor(model => model.EstadoNacimiento, "Estado de Nacimiento: ")
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="bi bi-controller"></i></span>
                @Html.TextBoxFor(model => model.EstadoNacimiento, new { @class = "form-control", autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.EstadoNacimiento, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            @Html.LabelFor(model => model.Direccion.IdDireccion, "ID Direccion: ")
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="bi bi-controller"></i></span>
                @Html.TextBoxFor(model => model.Direccion.IdDireccion, new { @class = "form-control", autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.Direccion.IdDireccion, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-3">
            @Html.LabelFor(model => model.CURP)
            <div class="input-group mb-2">
                <span class="input-group-text"><i class="bi bi-controller"></i></span>
                @Html.TextBoxFor(model => model.CURP, new { @class = "form-control", autocomplete = "off" , disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.CURP, null, new { @class = "text-danger" })
            </div>
        </div>

    </div>


    <div class="row">
        <div class="glyphicon-up">
            <div class="form-group">
                <div class="col-md-3">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    @Html.ActionLink("Regresar", "GetAll", "Persona", htmlAttributes: new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    </div>
}

